#!/usr/bin/env node

var log = require('verbalize');
log.runner = 'chat-client';

var _ = require('lodash');

var argv = require('minimist')(process.argv.slice(2));

var defaults = {
  messageCount: 50,
  studentsPerTeacher: 5,
  numTeachers: 10,
  numStudents: 200,
  nodeServer:  false
};

var options = _.merge(defaults, argv);
require('../src/load_test')(options);
